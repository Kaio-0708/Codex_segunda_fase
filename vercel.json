{
  "version": 2,
  "builds": [
    {
      "src": "projeto/server.js",  
      "use": "@vercel/node"
    },
    {
      "src": "projeto/public/**",   
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/criar-conta",
      "dest": "projeto/server.js"  
    },
    {
      "src": "/login",
      "dest": "projeto/server.js"   
    },
    {
      "src": "/editar/(.*)",
      "dest": "projeto/server.js"  
    },
    {
      "src": "/(.*)",
      "dest": "projeto/public/$1"   
    }
  ]
}
